<div style="background-color:#040954;">
  <div class="container mb-5">
      <div class="row">
        <div class='col-md-2'>
          <a href="/">rogo</a>
        </div>
      <% if customer_signed_in? %>
      <div class='col-md-5 offset-md-5 pull-right d-flex align-items-center'>
        <div class="text-right">
          <button type="button" class="btn btn-light"><%= link_to 'マイページ',customer_path(current_customer.id), class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '会員一覧',customers_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '部屋一覧',rooms_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'ログアウト',destroy_customer_session_path, method: :delete, class: "text-dark" %></button>
        </div>
      </div>
      <% elsif admin_signed_in? %>
      <div class='col-md-6 offset-md-4 pull-right d-flex align-items-center'>
        <div class="text-right">
          <button type="button" class="btn btn-light"><%= link_to '会員一覧',admin_customers_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '部屋一覧',admin_rooms_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'テイスト一覧',admin_tastes_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'ログアウト',destroy_admin_session_path, method: :delete, class: "text-dark" %></button>
        </div>
      </div>
      <% else %>
      <div class='col-md-5 offset-md-5 pull-right d-flex align-items-center'>
        <div class="text-right">
          <button type="button" class="btn btn-light"><%= link_to 'About',about_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '部屋一覧',rooms_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '新規登録',new_customer_registration_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'ログイン',new_customer_session_path, class: "text-dark" %></button>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>