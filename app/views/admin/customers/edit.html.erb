<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <h4>
        <%= @customer.last_name %><%= @customer.first_name %>さんの<strong>会員情報編集</strong>
      </h4>
      <table width="60%" height="15%">
        <tr>
          <td width="25%">会員ID</td>
          <td width="75%"><%= @customer.id %></td>
        </tr>
      </table>
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <div class="field">
          <label class="name">氏名　　　　　　　　</label>
          <%= f.text_field :last_name, autofocus: true, placeholder:"令和" %>
          <%= f.text_field :first_name, placeholder:"道子" %>
        </div>
        <div class="field">
          <label class="kana">フリガナ　　　　　　</label>
          <%= f.text_field :last_name_kana, placeholder:"レイワ" %>
          <%= f.text_field :first_name_kana, placeholder:"ミチコ" %>
        </div>
        <div class="field">
          <label class="email">メールアドレス　　　</label>
          <%= f.email_field :email, placeholder:"sample@example.com" %>
        </div>
        <div class="field">
          <label class="is_deleted">会員ステータス　　　</label>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会" %>
        </div>
        <div class="actions">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>