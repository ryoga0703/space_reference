<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <h4>
        <%= @customer.last_name %><%= @customer.first_name %>さんの<strong>会員詳細</strong>
      </h4>
      <table width="60%" height="150%">
        <tr>
          <td width="25%">会員ID</td>
          <td width="75%"><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td>
            <span class="mr-2"><%= @customer.last_name %></span>
            <span><%= @customer.first_name %></span>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <span class="mr-2"><%= @customer.last_name_kana %></span>
            <span><%= @customer.first_name_kana %></span>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <% if @customer.is_deleted == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-secondary font-weight-bold">退会</td>
          <% end %>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
    </div>
  </div>
</div>