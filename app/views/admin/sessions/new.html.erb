<div class="container">
  <div class="row my-5">
    <h4 class="col col-md-3 offset-md-2 text-center" style="background-color:#DDD">
      <strong>管理者用ログイン</strong>
    </h4>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row center-block mx-auto">
      <div class="col-md-5 text-right"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-md-7 text-left"><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40" %></div>
    </div>

    <div class="m-md-0"><br></div>

    <div class="row center-block mx-auto">
      <div class="col-md-5 text-right"><%= f.label :password, "パスワード" %></div>
      <div class="col-md-7 text-left"><%= f.password_field :password, autocomplete: "current-password", size: "40" %></div>
    </div>

    <div class="m-md-2"><br></div>

    <div class="row">
      <div class="action center-block mx-auto">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>