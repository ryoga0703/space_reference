<div class="container">
  <div class="row mb-5">
    <h4 class="col col-md-2 offset-md-2 text-center" style="background-color:#DDD">
      <strong>会員情報編集</strong>
    </h4>
  </div>
  
  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
    <% @customer.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  
  <div class="row mb-3">
    <div class="col col-md-8 offset-md-2">
      <%= form_with model: @customer, url: customer_path(current_customer.id) do |f| %>
        <div class="field">
          <label class="name">氏名　　　　　　　　　　</label>
          <%= f.text_field :last_name, autofocus: true, placeholder:"令和" %>
          <%= f.text_field :first_name, placeholder:"道子" %>
        </div>

        <div class="field">
          <label class="kana">フリガナ　　　　　　　　</label>
          <%= f.text_field :last_name_kana, placeholder:"レイワ" %>
          <%= f.text_field :first_name_kana, placeholder:"ミチコ" %>
        </div>

        <div class="field">
          <label class="email">メールアドレス　　　　　</label>
          <%= f.email_field :email, placeholder:"sample@example.com" %>
        </div>
      </div>
    </div>
    <div class="row mb-2">
      <div class="actions col col-md-2 offset-md-4">
        <%= f.submit "　　編集内容を保存　　", class:"btn btn-success" %>
      <% end %>
      </div>
      <div class="actions col col-md-2 offset-md-2">
        <%= link_to "　退会する　", customers_unsubscribe_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>