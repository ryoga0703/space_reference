<div class="customer-registration">
  <div class="container py-5">
    <div class="row mb-5">
      <h4 class="col col-md-2 offset-md-2 rounded py-1 text-center" style="background-color:rgba(255,111,0,0.1);">
        <strong>新規会員登録</strong>
      </h4>
    </div>

    <div class="row">
      <div class="col col-md-8 offset-md-2">
        <%= form_with model: @customer, url: customer_registration_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <div class="row py-3 field">
            <div class="col col-md-2">
              <label class="name">名前　　　　　　　　　　　　</label>
            </div>
            <div class="col col-md-4">
              <%= f.label :last_name, "(姓)" %>
              <%= f.text_field :last_name, autofocus: true, placeholder:"令和", required: true %>
            </div>
            <div class="col col-md-4">
              <%= f.label :first_name, "(名)" %>
              <%= f.text_field :first_name, placeholder:"道子", required: true %>
            </div>
          </div>

          <div class="row py-3 field">
            <div class="col col-md-2">
            <label class="kana">フリガナ　　　　　　　　　　　　</label>
            </div>
            <div class="col col-md-4">
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana, placeholder:"レイワ", required: true, size: 18 %>
            </div>
            <div class="col col-md-4">
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana, placeholder:"ミチコ", required: true, size: 18 %>
            </div>
          </div>

          <div class="row py-3 field">
            <div class="col col-md-3">
              <label class="email">メールアドレス</label>
            </div>
            <div class="col col-md-6 offset-md-1">
              <%= f.email_field :email, placeholder:"sample@example.com", required: true, size: 42 %>
            </div>
          </div>

          <div class="row py-3 field">
            <div class="col col-md-4">
              <label class="password">パスワード　(６文字以上)</label>
            </div>
            <div class="col col-md-6">
              <%= f.password_field :password, autocomplete: "new-password", required: true %>
            </div>
          </div>

          <div class="row py-3 field">
            <div class="col col-md-4">
              <label class="password_confirmation">パスワード　(確認用)</label>
            </div>
            <div class="col col-md-6">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
            </div>
          </div>

          <div class="row py-4 field">
            <div class="actions col-md-1 offset-md-4">
              <%= f.submit "　　新規登録　　", class:"btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row mb-2">
      <h4 class="col col-md-3 offset-md-2 rounded py-1 text-center mt-4" style="background-color:rgba(255,111,0,0.1);">
        <strong>既に登録済みの方</strong>
      </h4>
    </div>
    <div class="row my-5">
      <div class="col col-md-8 offset-md-3">
        <p><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</p>
      </div>
    </div>
  </div>
</div>